{% extends '::base.html.twig' %}

{% block stylesheets %}
  <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
  {% stylesheets output='css/ikasplay_back.css' filter='cssrewrite' debug=true
    '@backend_css'
  -%}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
  {% endstylesheets %}
{% endblock %}


{% block body -%}

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">::IkasPlay::</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="{{ path('fos_user_security_logout') }}">Disconnect</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="{% if app.request.attributes.get('_route') starts with 'admin' %}active{% endif %}"><a href="{{ path('admin_dashboard') }}">Dashboard <span class="sr-only">(current)</span></a></li>
            <li class="{% if app.request.attributes.get('_route') starts with 'question' %}active{% endif %}"><a href="{{ path('question') }}">Instrucciones</a></li>
            <li class="{% if app.request.attributes.get('_route') starts with 'puesto' %}active{% endif %}"><a href="{{ path('puesto') }}">Puestos</a></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><a href="">Frontend</a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          {% block content %}{% endblock %}
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('js/jquery.js') }}"></script>
  <script src="{{ asset('js/bootstrap.js') }}"></script>
  {% javascripts output='js/main.js' debug=true
    '@backend_js'
 -%}
      <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}